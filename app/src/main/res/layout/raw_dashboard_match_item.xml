<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    app:id="@+id/main_card"
    app:layout_width="match_parent"
    app:layout_height="wrap_content"
    android:cardBackgroundColor="@color/black"
    android:cardElevation="2dp"
    android:cardUseCompatPadding="true"
    app:clickable="true">

    <LinearLayout
        app:layout_width="match_parent"
        app:layout_height="match_parent"
        app:background="@color/light_grey"
        app:orientation="vertical">

        <LinearLayout
            app:layout_width="match_parent"
            app:layout_height="wrap_content"
            app:layout_marginBottom="@dimen/dp_10"
            app:layout_marginLeft="@dimen/dp_15"
            app:layout_marginRight="@dimen/dp_15"
            app:layout_marginTop="@dimen/dp_10"
            app:orientation="vertical">

            <LinearLayout
                app:layout_width="match_parent"
                app:layout_height="wrap_content"
                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                app:orientation="horizontal">

                <LinearLayout
                    app:layout_width="match_parent"
                    app:layout_height="wrap_content"
                    app:layout_weight="1.0"
                    app:orientation="vertical">

                    <pasu.vadivasal.view.TextView
                        app:id="@+id/tvTournamentTitle"
                        app:layout_width="match_parent"
                        app:layout_height="wrap_content"
                        app:ellipsize="end"
                        app:maxLines="1"
                        app:text="Avaniyapuram Jallikatu"
                        app:textColor="@color/black"
                        app:textSize="@dimen/sp_14" />

                    <pasu.vadivasal.view.TextView
                        app:id="@+id/tvMatchInfo"
                        app:layout_width="match_parent"
                        app:layout_height="wrap_content"
                        app:layout_marginTop="@dimen/dp_5"
                        app:text="Vadivasal"
                        app:textColor="@color/header_color"
                        app:textSize="@dimen/sp_14" />

                    <pasu.vadivasal.view.TextView
                        app:id="@+id/tvRoundName"
                        app:layout_width="wrap_content"
                        app:layout_height="wrap_content"
                        app:layout_marginTop="@dimen/dp_5"
                        tool:text=""
                        tool:textAllCaps="true"
                        tool:textColor="@color/black"
                        tool:textSize="@dimen/sp_14"
                        app:visibility="gone" />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    app:id="@+id/cvMatchStatus"
                    app:layout_width="wrap_content"
                    app:layout_height="wrap_content"
                    app:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:cardElevation="4dp">

                    <pasu.vadivasal.view.TextView
                        app:id="@+id/tvMatchStatus"
                        app:layout_width="wrap_content"
                        app:layout_height="wrap_content"
                        app:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        app:paddingBottom="2dp"
                        app:paddingLeft="8dp"
                        app:paddingRight="8dp"
                        app:paddingTop="2dp"
                        tool:text="Live"
                        app:visibility="gone"
                        tool:textColor="@color/black"
                        tool:textSize="12sp" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            app:layout_width="match_parent"
            app:layout_height="wrap_content"
            app:layout_marginLeft="@dimen/dp_10"
            app:layout_marginRight="@dimen/dp_10"
            app:src="@color/match_info_bg_color" />

        <LinearLayout
            app:layout_width="match_parent"
            app:layout_height="wrap_content"
            app:layout_marginBottom="@dimen/dp_10"
            app:layout_marginLeft="@dimen/dp_15"
            app:layout_marginRight="@dimen/dp_15"
            app:layout_marginTop="@dimen/dp_10"
            app:orientation="horizontal">

            <pasu.vadivasal.view.TextView
                app:id="@+id/tvTeamAName"
                app:layout_width="wrap_content"
                app:layout_height="wrap_content"
                app:layout_marginTop="@dimen/dp_4"
                app:layout_weight="1.0"
                app:ellipsize="end"
                app:maxLines="1"
                app:text="Bulls tampered"
                app:textColor="@color/black"
                app:textSize="@dimen/sp_16" />

            <pasu.vadivasal.view.TextView
                app:id="@+id/tvTeamAScore"
                app:layout_width="wrap_content"
                app:layout_height="wrap_content"
                app:layout_marginTop="@dimen/dp_4"
                app:layout_weight="1.0"
                
                app:ellipsize="end"
                app:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                app:maxLines="1"
                app:text="228"
                app:textColor="@color/black"
                tool:textSize="@dimen/sp_18" />

            <pasu.vadivasal.view.TextView
                app:id="@+id/tvTeamAOvers"
                app:layout_width="wrap_content"
                app:layout_height="wrap_content"
                app:layout_marginLeft="2dp"
                app:layout_marginTop="@dimen/dp_4"
                app:ellipsize="end"
                app:maxLines="1"
                tool:text="(82.0 OV)"
                tool:textColor="@color/header_color"
                tool:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            app:layout_width="match_parent"
            app:layout_height="wrap_content"
            app:layout_marginBottom="@dimen/dp_10"
            app:layout_marginLeft="@dimen/dp_15"
            app:layout_marginRight="@dimen/dp_15"
            app:orientation="horizontal">

            <pasu.vadivasal.view.TextView
                app:id="@+id/tvTeamBName"
                app:layout_width="wrap_content"
                app:layout_height="wrap_content"
                app:layout_marginTop="@dimen/dp_4"
                app:layout_weight="1.0"
                app:ellipsize="end"
                app:maxLines="1"
                app:text="Tampers knock"
                app:textColor="@color/black"
                app:textSize="@dimen/sp_16" />

            <pasu.vadivasal.view.TextView
                app:id="@+id/tvTeamBScore"
                app:layout_width="wrap_content"
                app:layout_height="wrap_content"
                app:layout_marginTop="@dimen/dp_4"
                app:layout_weight="1.0"
                app:ellipsize="end"
                app:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                app:maxLines="1"
                app:text="192"
                app:textColor="@color/black"
                tool:textSize="@dimen/sp_18" />

            <pasu.vadivasal.view.TextView
                app:id="@+id/tvTeamBOvers"
                app:layout_width="wrap_content"
                app:layout_height="wrap_content"
                app:layout_marginLeft="2dp"
                app:layout_marginTop="@dimen/dp_4"
                app:ellipsize="end"
                app:maxLines="1"
                tool:text="(82.0 OV)"
                tool:textColor="@color/header_color"
                tool:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            app:layout_width="match_parent"
            app:layout_height="wrap_content"
            app:background="@color/light_grey_20"
            app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            app:orientation="horizontal"
            app:paddingLeft="@dimen/dp_15"
            app:paddingRight="@dimen/dp_15">

            <pasu.vadivasal.view.TextView
                app:id="@+id/tvSummary"
                app:layout_width="match_parent"
                app:layout_height="wrap_content"
                app:layout_weight="1.0"
                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                app:minLines="2"
                app:paddingBottom="@dimen/dp_4"
                app:paddingTop="@dimen/dp_4"
                app:text="29 Jan 2017 9:30 AM"
                app:textColor="@color/black"
                app:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
